{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "rootDir": "src/scripts",
    "outDir": "src/scripts/dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/scripts/**/*.ts"],
  "exclude": ["src/scripts/dist"]
}
